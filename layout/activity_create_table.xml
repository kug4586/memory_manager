<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAE583"
    android:orientation="vertical"
    tools:context=".CreateTable">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#E6704016"
        android:gravity="center|left"
        android:paddingLeft="10dp"
        android:text="새로운 표"
        android:textSize="20sp"
        android:textColor="#502E10"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="20dp">

        <!--표 이름 설정-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="이름"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/table_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:inputType="text"
                android:textColor="#000000"/>


        </LinearLayout>

        <!--카테고리 분류-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="horizontal"
            android:background="#FFFFFF">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#FAE583"
                android:text="카테고리 "
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <Spinner
                android:id="@+id/category"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <!--복습 횟수 설정-->
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/repeat_5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=" 5회"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <RadioButton
                android:id="@+id/repeat_7"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="40dp"
                android:text=" 7회"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <RadioButton
                android:id="@+id/repeat_10"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="40dp"
                android:text=" 10회"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"/>

        </RadioGroup>

        <!--시작 날짜-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="날짜"
                android:textColor="#000000"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="30dp">

                <RadioButton
                    android:id="@+id/date_now"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="오늘"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <RadioButton
                    android:id="@+id/date_custom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:text="직접 입력"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

            </RadioGroup>

        </LinearLayout>

        <!--직접 날짜 입력-->
        <EditText
            android:id="@+id/enter_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="20dp"
            android:hint="ex) 20220101"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:gravity="center"
            android:orientation="horizontal">

            <!--돌아기기-->
            <TextView
                android:id="@+id/create_table_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="취소"
                android:textSize="24sp"
                android:textColor="#000000"
                android:textStyle="bold"/>

            <!--완료-->
            <TextView
                android:id="@+id/create_table_complete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:text="만들기"
                android:textSize="24sp"
                android:textColor="#000000"
                android:textStyle="bold"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>